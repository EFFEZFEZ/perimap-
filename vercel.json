{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "public": true,
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=20, stale-while-revalidate=40"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/carte",
      "destination": "/index.html"
    },
    {
      "source": "/horaires",
      "destination": "/index.html"
    },
    {
      "source": "/itineraire",
      "destination": "/index.html"
    },
    {
      "source": "/trafic",
      "destination": "/index.html"
    },
    {
      "source": "/tarifs",
      "destination": "/index.html"
    },
    {
      "source": "/tarifs/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/realtime.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 30,
      "memory": 1024
    }
  }
}
